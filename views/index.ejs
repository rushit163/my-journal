<%-include("partials/header") %>
      <div class="d-flex flex-col">
        <% for(let arr of array) {%>
            <div class="card mt-4 mx-3" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= arr.topic %></h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary"><%= arr.date %></h6>
                    <p class="card-text"><%= arr.message %></p>
                    <a href="/update/<%=arr.id%>" class="card-link">Update</a>
                    <form method="post" action="/delete/<%=arr.id%>?_method=DELETE"> 
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        <% }%>
      </div>
<%- include("partials/footer") %>